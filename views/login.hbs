<div class="col-12 align-self-center">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active sign-in" id="home-tab" data-toggle="tab" href="#sign-in" role="tab" aria-controls="home" aria-selected="true">Sign in</a>
        </li>
        <!--/nav-item-->
        <li class="nav-item">
            <a class="nav-link register" id="profile-tab" data-toggle="tab" href="#register" role="tab" aria-controls="profile" aria-selected="false">Register</a>
        </li>
        <!--/nav-item-->
    </ul>
    <!--/nav nav-tabs-->

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="sign-in" role="tabpanel" aria-labelledby="home-tab">
            <div class="card sign-in-form text-white bg-primary">
                <div class="card-body">
                    <form action="" id="login-form" novalidate>
                        <div class="form-group">
                            <label for="sign-in-email">Email address</label>
                            <input type="email"
                                   class="form-control"
                                   id="sign-in-email"
                                   name="email"
                                   aria-describedby="emailHelp"
                                   placeholder="Enter email"
                                   required
                            >
                        </div>
                        <!--/form-group-->
                        <div class="form-group">
                            <label for="sign-in-password">Password</label>
                            <div class="password-wrapper">
                                <input type="password"
                                       class="form-control"
                                       id="sign-in-password"
                                       name="password"
                                       placeholder="Password"
                                       required
                                >
                                <i class="fas fa-eye"></i>
                            </div>
                        </div>
                        <!--/form-group-->
                        <fieldset class="form-group">
                            <a class="forgot-password-link" href="/reset">Forgot password?</a>
                        </fieldset>
                        <!--/form-group-->
                        <button type="submit" class="btn btn-primary submit-form-btn">Submit</button>
                    </form>
                    <!--/form-->
                </div>
                <!--/card-body-->
            </div>
            <!--/card-->
        </div>
        <!--/tab-pane-->
        <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="profile-tab">
            <div class="card sign-in-form text-white bg-primary">
                <div class="card-body">
                    <form action="" id="register-form" novalidate>
                        <div class="form-group">
                            <label for="register-name">Name</label>
                            <input type="text" class="form-control" id="register-name" name="name" aria-describedby="emailHelp" placeholder="Enter name">
                        </div>
                        <!--/form-group-->
                        <div class="form-group">
                            <label for="register-email">Email address</label>
                            <input type="email" class="form-control" id="register-email" name="email" placeholder="Enter email">
                        </div>
                        <!--/form-group-->
                        <div class="form-group">
                            <label for="register-password">Password</label>
                            <div class="password-wrapper">
                                <input type="password" class="form-control" id="register-password" name="password" placeholder="Password">
                                <i class="fas fa-eye"></i>
                            </div>
                        </div>
                        <!--/form-group-->
                        <button type="submit" class="btn btn-primary submit-form-btn">Submit</button>
                    </form>
                    <!--/form-->
                </div>
                <!--/card-body-->
            </div>
            <!--/card-->
        </div>
        <!--/tab-pane-->
    </div>
    <!--/ul nav-tabs-->
</div>
<!--/col-12-->
