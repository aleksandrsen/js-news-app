<div class="col-12 align-self-center">
    <div class="tab-pane fade show active" id="sign-in" role="tabpanel" aria-labelledby="home-tab">
        <div class="card sign-in-form text-white bg-primary">
            <div class="card-body">
                <form action="" id="reset-password-form">
                    <div class="form-group">
                        <label for="reset-password">New password</label>
                        <input type="password" class="form-control" id="reset-password" name="password" aria-describedby="emailHelp" placeholder="Enter new password">
                    </div>
                    <!--/form-group-->
                    <button type="submit" class="btn btn-primary submit-form-btn"
                            data-user-id="{{userId}}"
                            data-token="{{token}}">Change password</button>
                </form>
                <!--/form-->
            </div>
            <!--/card-body-->
        </div>
        <!--/card-->
    </div>
    <!--/tab-pane-->
</div>
<!--/col-12-->
